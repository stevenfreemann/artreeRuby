<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'forgot__form'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%=  hidden_field_tag "signUpScreen", "screen1" %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Restablecer ContraseÃ±a" %>
  </div>
<% end %>

