<div class='signIn'>
  <%= react_component("Title", { title: "INICIAR SESIÓN" },)%>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name) , :html => {:class => 'signIn__form'}) do |f| %>
    <%=  hidden_field_tag "signUpScreen", "screen1" %>
    <div class="field">
      <%= f.label :Email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :Contraseña%><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <%= f.submit "Log in", class:'button__signIn' %>
    <div class="signIn__links">
      <a href="/users/sign_up">Registrarse</a>
      <a href="/users/password/new">Recordar Contraseña</a>
    </div>
  <% end %>
</div>
